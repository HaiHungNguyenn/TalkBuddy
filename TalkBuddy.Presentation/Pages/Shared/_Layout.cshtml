<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TalkBuddy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/TalkBuddy.Presentation.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            border: 0;
        }

        .nav-item:hover {
            background-color: lightgrey;
            border-radius: 0.5rem;
        }

        .layout {
            display: grid;
            grid-template-columns: 1fr 5fr;
        }

        .fw-semibold {
            font-weight: 600;
            opacity: 0.75;
        }

        .nav-item-container {
            display: grid;
            grid-template-columns: 1fr 9fr;
            transition: background-color 0.3s ease-out;
        }

        .nav-icon {
            color: #a160fe;
        }
    </style>
</head>
<body class="bg-color">

<div class="layout" style="height: 100vh;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 align-items-start h-100" style="background-color:#41404F">
            <div class="container d-flex flex-column justify-content-start gap-4">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><img width="100px" height="100px" src="img/TalkBuddy.png"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between w-100">
                    <ul class="navbar-nav flex-grow-1 flex-column fs-5">
                        <li class="nav-item nav-item-container align-items-center px-2">
                            <i class="fa-solid fa-message add-icon nav-icon"></i>
                            <a class="nav-link text-dark w-100 fw-semibold" asp-area="" asp-page="/ChatPage">Chat</a>
                        </li>
                        <li class="nav-item nav-item-container align-items-center px-2">
                            <i class="fa-solid fa-user-group add-icon nav-icon"></i>
                            <a class="nav-link text-dark fw-semibold" asp-area="" asp-page="/FriendsList">Friends</a>
						</li>
                        <li class="nav-item nav-item-container align-items-center px-2">
                            <i class="fa-solid fa-user-plus add-icon nav-icon"></i>
                            <a class="nav-link text-dark fw-semibold" asp-area="" asp-page="/AddFriendPage">Add Friend</a>
                        </li>
                        <li class="nav-item nav-item-container align-items-center px-2">
                            <i class="fa-solid fa-envelope-open add-icon nav-icon"></i>
                            <a class="nav-link text-dark fw-semibold" asp-area="" asp-page="/AddFriendRequest">Friend Invitations</a>
                        </li>
                        <li class="nav-item nav-item-container align-items-center px-2">
                            <i class="fa-solid fa-user add-icon nav-icon"></i>
                            <a class="nav-link text-dark fw-semibold" asp-area="" asp-page="/Edit-Profile">Profile</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/header.js"></script>
<script src="~/js/signalr/dist/browser/signalr.js" ></script>
<script src="~/js/notification.js"></script>
<script src="~/js/presence.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
